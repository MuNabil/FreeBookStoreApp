@model RolesViewModel
@{
    ViewData["Title"] = "Roles";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@WebResource.RolesTableTitle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home"
                                asp-action="Index">@WebResource.HomePage</a></li>
                        <li class="breadcrumb-item active">@WebResource.ManageBook</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-start">
                        <h3 class="card-title">@WebResource.RolesTableTitle</h3>
                        <div class="card-tools">
                            @* @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                                { *@
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-outline-primary rounded-pill ml-5" data-toggle="modal"
                                data-target="#exampleModal" onclick="Reset()">
                                @WebResource.CreateNewRoleBtn
                            </button>
                            @* } *@
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="rolesTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td>@WebResource.RoleName</td>
                                    <td>@WebResource.Events</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model.Roles)
                                {
                                    <tr>
                                        <td>
                                            @switch (role.Name)
                                            {
                                                case "SuperAdmin":
                                                    <span class="badge badge-danger"
                                            style="width:250px;height:25px;">@role.Name</span>
                                                    break;
                                                case "Admin":
                                                    <span class="badge badge-success"
                                            style="width:250px;height:25px;">@role.Name</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-warning"
                                            style="width:250px;height:25px;">@role.Name</span>
                                                    break;
                                            }
                                        </td>
                                        @*@if(User.IsInRole("SuperAdmin") || User.IsInRole("Admin")){
                                            <td>
                                            <input type="button" class="btn btn-info btn-sm" onclick="Edit('@role.Id',
                                            '@role.Name')" value="@WebResource.EditBtn" data-toggle="modal"
                                            data-target="#exampleModal" />
                                            <input type="button" class="btn btn-danger btn-sm" onclick="Delete('@role.Id')"
                                            value="@WebResource.DeleteBtn" />
                                            </td>
                                            }*@
                                        <td>
                                            <input type="button" class="btn btn-info btn-sm"
                                            onclick="Edit('@role.Id', '@role.Name')" value="@WebResource.EditBtn"
                                            data-toggle="modal" data-target="#exampleModal" />

                                            <input type="button" class="btn btn-danger btn-sm" onclick="Delete('@role.Id')"
                                            value="@WebResource.DeleteBtn" />

                                            <a class="btn btn-success btn-sm" asp-action="ManagePermissions"
                                            asp-controller="Permissions" asp-route-roleId="@role.Id">
                                                @WebResource.AddPermissionsBtn
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>




<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">@WebResource.CreateNewRoleBtn</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Roles" asp-controller="Accounts" method="post">
                    <div class="form-group">
                        <input type="text" hidden id="roleId" class="form-control" asp-for="NewRole.RoleId" />

                        <label asp-for="NewRole.RoleName" class="conrole-lable">@WebResource.RoleName</label>
                        <input type="text" id="roleName" class="form-control" asp-for="NewRole.RoleName" />
                        <span asp-validation-for="NewRole.RoleName" class="text-danger"></span>

                    </div>
                    <div class="modal-footer-rtl" style="padding:0 15px 15px 0">
                        <input type="submit" id="btnSave" class="btn btn-primary" value="@WebResource.SaveBtn" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@WebResource.Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

