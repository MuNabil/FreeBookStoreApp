@model CategoryViewModel

@inject UserManager<ApplicationUser> _userManager;

@{
    ViewData["Title"] = "Categories";
}

<style>
    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

    /* Style the buttons that are used to open the tab content */
    .tab button {
        background-color: inherit;
        float: right;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        background-color: #ddd;
    }

    /* Create an active/current tablink class */
    .tab button.active {
        background-color: #ccc;
    }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@WebResource.CategoryTableTitle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home"
                                asp-action="Index">@WebResource.HomePage</a></li>
                        <li class="breadcrumb-item active">@WebResource.ManageBook</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-start">
                        <h3 class="card-title">@WebResource.CategoryTableTitle</h3>
                        <div class="card-tools">
                            @* @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                                { *@
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-outline-primary rounded-pill ml-5" data-toggle="modal"
                                data-target="#exampleModal" onclick="Reset()">
                                @WebResource.CreateNewCategoryBtn
                            </button>
                            @* } *@
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <!-- Tab links -->
                        <div class="tab">
                            <button class="tablinks" onclick="openCity(event, 'categories')"
                                id="defaultOpen">@WebResource.CategoryTableTitle</button>
                            <button class="tablinks"
                                onclick="openCity(event, 'logCategories')">@WebResource.LogCategories</button>
                        </div>

                        <!-- Tab content -->
                        <div id="categories" class="tabcontent">
                            <table id="rolesTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <td>@WebResource.CategoryName</td>
                                        <td>@WebResource.Description</td>
                                        <td>@WebResource.Events</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <tr>
                                            <td>@category.Name</td>
                                            <td>@category.Description</td>
                                            <td>
                                                <input type="button" class="btn btn-info btn-sm"
                                                onclick="Edit('@category.Id', '@category.Name', '@category.Description')"
                                                value="@WebResource.EditBtn" data-toggle="modal"
                                                data-target="#exampleModal" />
                                                <input type="button" class="btn btn-danger btn-sm"
                                                onclick="Delete('@category.Id')" value="@WebResource.DeleteBtn" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div id="logCategories" class="tabcontent">
                            <table id="rolesTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <td>#</td>
                                        <td>@WebResource.CategoryName</td>
                                        <td>@WebResource.ActionName</td>
                                        <td>@WebResource.Date</td>
                                        <td>@WebResource.UserName</td>
                                        <td>@WebResource.Events</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var logCategory in Model.LogCategories)
                                    {
                                        <tr>
                                            <td>#</td>
                                            <td>@logCategory.Category.Name</td>
                                            <td>
                                                @switch (logCategory.Action)
                                                {
                                                    case "Delete":
                                                        <span class="badge badge-danger"
                                                style="width:150px;height:25px;">@logCategory.Action</span>
                                                        break;
                                                    case "Save":
                                                        <span class="badge badge-success"
                                                style="width:150px;height:25px;">@logCategory.Action</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-warning"
                                                style="width:150px;height:25px;">@logCategory.Action</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@logCategory.Date</td>
                                            <td>@(_userManager.FindByIdAsync(logCategory.UserId.ToString()).Result.Name)
                                            </td>
                                            <td>
                                                <input type="button" class="btn btn-danger btn-sm"
                                                onclick="DeleteLog('@logCategory.Id')" value="@WebResource.DeleteBtn" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>




<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">@WebResource.CreateNewRoleBtn</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Save" asp-controller="Categories" method="post">
                    <input type="text" hidden id="categoryId" class="form-control" asp-for="NewCategory.Id" />
                    <div class="form-group">
                        <label asp-for="NewCategory.Name" class="conrole-lable">@WebResource.CategoryName</label>
                        <input type="text" id="categoryName" class="form-control" asp-for="NewCategory.Name" />
                        <span asp-validation-for="NewCategory.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewCategory.Description" class="conrole-lable">@WebResource.Description</label>
                        <input type="text" id="categoryDescription" class="form-control"
                            asp-for="NewCategory.Description" />
                        <span asp-validation-for="NewCategory.Description" class="text-danger"></span>
                    </div>
                    <div class="modal-footer-rtl" style="padding:0 15px 15px 0">
                        <input type="submit" id="btnSave" class="btn btn-primary" value="@WebResource.SaveBtn" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@WebResource.Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

